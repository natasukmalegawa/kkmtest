---
layout: layouts/base.njk
---

<article class="post">
  <header class="post-header">
    <div class="container">
      <h1 class="post-title">{{ title }}</h1>
      <time datetime="{{ date | dateIso }}" class="post-date">{{ date | readableDate }}</time>
      {% if featuredImage %}
      <div class="post-featured-image">
        <img src="{{ featuredImage }}" alt="{{ title }}">
      </div>
      {% endif %}
    </div>
  </header>

  <div class="post-content container">
    {{ content | safe }}
  </div>

  <footer class="post-footer container">
    <div class="post-tags">
      {% for tag in tags %}
        {% if tag != "post" %}
        <a href="/tags/{{ tag | slug }}/" class="post-tag">#{{ tag }}</a>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="post-navigation">
      <a href="/articles/" class="btn">← Kembali ke Artikel</a>
    </div>
  </footer>
</article>
