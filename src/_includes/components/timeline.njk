<section id="timeline" class="timeline-section section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Timeline Kegiatan</h2>
    </div>
    
    <div class="timeline">
      {% for event in timeline | sort(false, false, 'date') %}
      <div class="timeline-item reveal-element">
        <div class="timeline-icon">
          {% if event.icon %}
          <img src="{{ event.icon }}" alt="{{ event.title }}">
          {% else %}
          <span class="timeline-dot"></span>
          {% endif %}
        </div>
        <div class="timeline-content">
          <h3 class="timeline-title">{{ event.title }}</h3>
          <time class="timeline-date">{{ event.date | readableDate }}</time>
          <p class="timeline-description">{{ event.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
