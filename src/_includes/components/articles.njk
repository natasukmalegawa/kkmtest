<section id="articles" class="articles-section section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Artikel Terbaru</h2>
      <a href="/articles/" class="view-all">Lihat Semua</a>
    </div>
    
    <div class="articles-grid">
      {%- for post in collections.post | reverse -%}
      {% if loop.index <= 3 %}
      <article class="article-card reveal-element">
        {% if post.data.featuredImage %}
        <div class="article-image">
          <img src="{{ post.data.featuredImage }}" alt="{{ post.data.title }}">
        </div>
        {% endif %}
        <div class="article-content">
          <time datetime="{{ post.date | dateIso }}" class="article-date">{{ post.date | readableDate }}</time>
          <h3 class="article-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h3>
          <p class="article-excerpt">{{ post.data.description }}</p>
          <a href="{{ post.url }}" class="article-link">Baca Selengkapnya â†’</a>
        </div>
      </article>
      {% endif %}
      {%- endfor -%}
    </div>
  </div>
</section>
